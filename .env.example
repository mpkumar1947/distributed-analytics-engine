# Database Configuration (PostgreSQL)
# Format: postgresql+asyncpg://user:password@host:port/dbname
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/gradedb"

# Redis Configuration (For Celery Broker & Caching)
REDIS_URL="redis://localhost:6379/0"

# Telegram Bot Credentials
# Get this from @BotFather
TELEGRAM_BOT_TOKEN="123456789:ABCdefGHIjklMNOpqrSTUvwxYZ"

# Admin Configuration
# Comma-separated list of Telegram User IDs for admin access
TELEGRAM_ADMIN_IDS=12345678,87654321

# Channel IDs for Logging & Storage
TELEGRAM_ADMIN_CHANNEL_ID=""
TELEGRAM_PLOT_STORAGE_CHANNEL_ID=""

# Webhook & Networking
# The public domain where the bot receives updates (e.g., ngrok or VPS IP)
PUBLIC_DOMAIN="your-domain.com"
WEBHOOK_URL_PATH_PREFIX="/webhook"
BOT_WEBHOOK_PORT=7000

# Feature Flags
# Set to 'true' to start in maintenance mode
BOT_STARTUP_MAINTENANCE_MODE="false"